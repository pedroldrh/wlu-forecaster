generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum SeasonStatus {
  DRAFT
  LIVE
  ENDED
  PAYOUTS_SENT
}

enum EntryStatus {
  PENDING
  PAID
}

enum QuestionStatus {
  OPEN
  CLOSED
  RESOLVED
}

enum Category {
  SPORTS
  CAMPUS
  ACADEMICS
  GREEK
  OTHER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  isWluVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  accounts      Account[]
  sessions      Session[]
  entries       SeasonEntry[]
  forecasts     Forecast[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Season {
  id            String       @id @default(cuid())
  name          String
  startDate     DateTime
  endDate       DateTime
  entryFeeCents Int
  status        SeasonStatus @default(DRAFT)
  createdAt     DateTime     @default(now())
  entries       SeasonEntry[]
  questions     Question[]
}

model SeasonEntry {
  id                  String      @id @default(cuid())
  userId              String
  seasonId            String
  status              EntryStatus @default(PENDING)
  stripeSessionId     String?
  stripeCustomerId    String?
  stripePaymentIntent String?
  paidAt              DateTime?
  createdAt           DateTime    @default(now())
  user                User        @relation(fields: [userId], references: [id])
  season              Season      @relation(fields: [seasonId], references: [id])

  @@unique([userId, seasonId])
}

model Question {
  id              String         @id @default(cuid())
  seasonId        String
  title           String
  description     String
  category        Category       @default(OTHER)
  closeTime       DateTime
  resolveTime     DateTime
  status          QuestionStatus @default(OPEN)
  resolvedOutcome Boolean?
  resolvedAt      DateTime?
  createdAt       DateTime       @default(now())
  season          Season         @relation(fields: [seasonId], references: [id])
  forecasts       Forecast[]
}

model Forecast {
  id          String   @id @default(cuid())
  userId      String
  questionId  String
  probability Float
  submittedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  question    Question @relation(fields: [questionId], references: [id])

  @@unique([userId, questionId])
}
